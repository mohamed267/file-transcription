options {
  STATIC=false;
  DEBUG_PARSER=true;
} 

PARSER_BEGIN(TRANSB)
import java.io.*;
import java.text.*;


public class TRANSB {

  public static void main(String[] args) throws ParseException, IOException {
    File inputFile = new File("doc2.txt");
    FileWriter fw = new FileWriter("doc3.txt");
    FileReader reader = new FileReader(inputFile);

    TRANSB parser = new TRANSB(reader);
    try {
      parser.TextDoc2();
      System.out.println("Valide");
    } catch (ParseException e) {
      System.err.println("PAS VALIDE");
    } 
  }
}

PARSER_END(TRANSB)

TOKEN : {
  < REEL: <ENTIER>","(<CHIFFRE>)+ >
  | < ENTIER: ("-")?(<CHIFFRE>)+ >
  | < COMMENT: "/*"(~[]|"\n")*"*/" >
  | <#CHIFFRE: ["0"-"9"] >


}


void TextDoc2() :
{}
{
  EnsembleLignes() | {}
}

void EnsembleLignes() :
{}
{
  MultilignesValides() SuitEnsble()
  | < COMMENT > SuitEnsble()
}

void SuitEnsble() :
{}
{
  EnsembleLignes() | {}
}

void MultilignesValides() :
{}
{
  LigneValide() SuitMultiligne()
}

void SuitMultiligne() :
{}
{
  MultilignesValides() | {}
}

void LigneValide() :
{}
{
  "@" Contenuligne() "\n"
}

void Contenuligne() :
{}
{
  Mots() SerieMots()
}

void SerieMots() :
{}
{
  Contenuligne() | {}
}

void Mots() :
{}
{
  < ENTIER >
  | < REEL >
}